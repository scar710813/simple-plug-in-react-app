{
  "short_name": "Licom",
  "name": "Licom",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Licom",
  "permissions": ["tabs"],
  "icons": {
    "512": "logo512.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["side-panel.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
