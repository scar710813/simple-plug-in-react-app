datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

model User {
  login     String   @id @unique
  publicKey String   @unique
  authKey   String   @unique
  time      DateTime @default(now())

  comments    Comment[]
  fingerprint Fingerprint[]
  votes       Vote[]
}

model Webpage {
  url   String @id
  count Int    @default(0)

  comments Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  comment   String
  time      DateTime @default(now())
  deleted   Int      @default(0)
  votesUp   Int      @default(0)
  votesDown Int      @default(0)

  Children  Comment[] @relation("Comment_Children")
  parent    Comment?  @relation("Comment_Children", fields: [parent_id], references: [id])
  parent_id Int?

  votes Vote[]

  User       User?    @relation(fields: [userLogin], references: [login])
  userLogin  String?
  Webpage    Webpage? @relation(fields: [webpageUrl], references: [url])
  webpageUrl String?
}

model Fingerprint {
  fp    String   @unique
  time  DateTime @default(now())
  count Int      @default(0)
  rKey  String   @default("")

  User      User?   @relation(fields: [userLogin], references: [login])
  userLogin String?
}

model Vote {
  id       Int  @id @default(autoincrement())
  voteType Int?

  User      User?    @relation(fields: [userLogin], references: [login])
  userLogin String?
  Comment   Comment? @relation(fields: [commentId], references: [id])
  commentId Int?
}
